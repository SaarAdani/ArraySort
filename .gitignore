package com.saar;

public class Main {
    public static int[] arr = {-9, 10, 12, 8, -9, 7, 30, -12, 4};
    public static int[] arr1 = {1, 2, 4, 3, 5, 6};

    public static void main(String[] args) {
        System.out.println(checkMaxSumInArray());
        System.out.println(checkIfOneSwitchSorted());
    }

    public static int checkMaxSumInArray() {

        int maxSum = 0;
        int currentsum = 0;
        for (int i = 0; i < arr.length; i++) {
            currentsum += arr[i];

            if (maxSum < currentsum) {
                maxSum = currentsum;
            } else if (currentsum < 0) {
                currentsum = 0;
            }
        }
        return maxSum;
    }

    public static boolean checkIfOneSwitchSorted() {

        int counter = 0;
        for (int i = 2; i < arr1.length - 1; i++) {
            if (arr1[i - 1] > arr1[i]) {
                counter++;
            } else if (arr1[arr1.length - 2] > arr1[arr1.length - 1]) {
                counter += 2;
            } else if (arr1[0] > arr1[1]) {
                counter += 2;
            }
        }
            if (counter <= 2) {
                return true;
            }
            return false;}

    }

